@using Data.Model;
@{
    ViewBag.Title = "AddUser";
    Layout = "~/Views/Shared/_Admin.cshtml";
    List<Korisnici> k = (List<Korisnici>)ViewData["AllUsers"];
}

<form action="~/User/AddUser" method="post">
    <div class="col-lg-8">
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">
                <button data-dismiss="alert" class="close" type="button">×</button>
                <strong>Greška!</strong> @ViewBag.Error
            </div>
        }
        @if (ViewBag.Success != null)
        {
            <div class="alert alert-success">
                <button data-dismiss="alert" class="close" type="button">×</button>
                <strong>Obavljeno!</strong> @ViewBag.Success
            </div>
        }
        <div class="panel panel-default">
            <div class="panel-body">
                <h3>Dodavanje novog korisnika</h3>
                <br />
                <div class="form-group">
                    <label>Ime</label>
                    <input class="form-control" placeholder="Unesite ime" name="ime">
                </div>

                <div class="form-group ">
                    <label>Prezime</label>
                    <input class="form-control" placeholder="Unesite prezime" name="prezime">
                </div>

                <div class="form-group ">
                    <label>Email</label>
                    <input type="email" class="form-control" placeholder="Unesite email" name="email">
                </div>

                <div class="form-group ">
                    <label>Korisničko ime</label>
                    <input class="form-control" placeholder="Unesite korisničko ime" name="korisnickoIme">
                </div>

                <div class="form-group ">
                    <label>Lozinka</label>
                    <input type="password" class="form-control" placeholder="Unesite lozinku" name="lozinka">
                </div>
                <div class="form-group ">
                    <label>Potvrdi lozinku</label>
                    <input type="password" class="form-control" placeholder="Unesite lozinku" name="potvrda">
                </div>


                <div class="form-group ">
                    <input type="submit" value="Snimi" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
</form>

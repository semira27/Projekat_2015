@{
    ViewBag.Title = "Snimi";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<link href="~/Content/datepicker/jquery.datetimepicker.css" rel="stylesheet" />
<script src="~/Content/datepicker/jquery.datetimepicker.js"></script>
<script src="~/Content/tinymce/js/tinymce/tinymce.min.js"></script>





<script>
    $(document).ready(function () {
        $('#datetimepicker_mask').datetimepicker({
            mask: '9999/19/39',
            format: 'd.m.Y'
        });
    });
    tinymce.init({
        selector: "textarea",
        plugins: [
            "advlist autolink lists link image charmap print preview anchor",
            "searchreplace visualblocks code fullscreen",
            "insertdatetime media table contextmenu paste"
        ],
        toolbar: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image"
    });
 </script>


<form method="post">
    <div class="col-lg-6">
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">
                <button data-dismiss="alert" class="close" type="button">×</button>
                <strong>Greška!</strong> @ViewBag.Error
            </div>
        }
        @if (ViewBag.Success != null)
        {
            <div class="alert alert-success">
                <button data-dismiss="alert" class="close" type="button">×</button>
                <strong>Obavljeno!</strong> @ViewBag.Success
            </div>
        }
        <div class="panel panel-default">
            <div class="panel-body">
                <h4>Unos nove obavijesti u kalendar</h4>
                <div class="form-group">
                    <div class="form-group">
                        <label>Naslov obavijesti</label>
                        <input class="form-control" placeholder="Unesite naslov obavijesti" name="naslov">
                    </div>
                    <label>Obavijest</label>
                    <textarea class="form-control" rows="3" name="obavijest"></textarea>
                </div>
                <div class="form-group">
                    <label>Datum</label>
                    <input class="form-control" id="datetimepicker_mask" placeholder="Odaberite datum" name="datum">
                </div>
                <div class="form-group">

                    <input type="submit" value="Snimi" class="btn btn-primary" />
                </div>
                </div></div>
            </div>
</form>


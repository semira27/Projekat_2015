@using Data.Model;
@{
    ViewBag.Title = "Chart";
    Layout = "~/Views/Shared/_Public.cshtml";

    Anketa anketa = (Anketa)ViewData["Anketa"];
    string glasova =(String) ViewData["BrojGlasova"];
    
}
<link href="~/Content/JS/morris/morris.css" rel="stylesheet" />
<link href="~/Content/JS/morris/prettify.min.css" rel="stylesheet" />
<script src="~/Content/JS/morris/morris.js"></script>
<script src="~/Content/JS/morris/prettify.min.js"></script>
<script src="~/Content/JS/morris/raphael-min.js"></script>


<script>
    $(document).ready(function () {
        $.get('/Anketa/GetData/?Id=@anketa.AnketaID', function (result) {
            new Morris.Donut({
                element: 'graph',
                data: result,
                formatter: function (x) { return x  }
            });
        });
    });
</script>

<div class="straniceBody">
    <h2 class="fmonFontColor"><b>Rezultati ankete</b></h2>
    <h4 class="fmonFontColor">Ukupno glasova: @glasova</h4>
    <div id="graph"></div>
</div>
